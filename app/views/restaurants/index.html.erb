<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cuisine</th>
      <th>Rating</th>
      <th>Accepts Ten Bis</th>
      <th>Location latitude</th>
      <th>Location longitude</th>
      <th>Max delivery time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.cuisine %></td>
        <td><%= restaurant.rating %></td>
        <td><%= restaurant.accepts_ten_bis %></td>
        <td><%= restaurant.location_latitude %></td>
        <td><%= restaurant.location_longitude %></td>
        <td><%= restaurant.max_delivery_time %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path %><br>
<%= button_to 'Load Restaurant Data', action: :load_data %>
